<Page x:Class="KSAGrinder.Pages.FileInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KSAGrinder.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="FileInput">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Grid.RowSpan="2" Background="Transparent" Drop="Page_Drop" AllowDrop="True"/>
        <WrapPanel Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Drop="Page_Drop" AllowDrop="True">
            <Label Content="Select or drag and drop a provided file." FontSize="20"/>
            <Button x:Name="BtnSelect" MaxWidth="100" Height="25" Content="Select.." Click="BtnSelect_Click"/>
        </WrapPanel>
        <StackPanel Margin="10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
            <Label Content="Language / 언어" FontSize="13" Margin="10,0,10,0"/>
            <ComboBox x:Name="CmbLang" Height="30" Width="100" SelectedIndex="0" ItemsSource="{Binding Languages}"
                      VerticalContentAlignment="Center" SelectionChanged="CmbLang_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Page>

<Page x:Class="KSAGrinder.Pages.FileInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KSAGrinder.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="FileInput">

    <Grid x:Name="grid">
        <WrapPanel Background="Transparent" Drop="Page_Drop" AllowDrop="True"/>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Drop="Page_Drop" AllowDrop="True">
            <Label Content="제공된 파일을 선택하거나 드래그 앤 드롭하세요." FontSize="20" Margin="0,0,0,10"/>
            <Button x:Name="BtnSelect" MaxWidth="100" Height="25" Content="선택" Click="BtnSelect_Click"/>
        </WrapPanel>
    </Grid>
</Page>

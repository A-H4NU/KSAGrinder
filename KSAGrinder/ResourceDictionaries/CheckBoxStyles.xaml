                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource DarkBackground}" />
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#2b5091" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

